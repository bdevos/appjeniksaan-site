---
import { monthFormatter } from '../dateFormat'

export interface Props {
  month: string
}

const { month: input } = Astro.props as Props

const [year, month] = input.split('-').map((value) => parseInt(value, 10))

const date = monthFormatter.format(new Date(Date.UTC(year, month)))
---

<h2 class="header">{date}</h2>

<style>
  .header {
    font-size: var(--font-size-5);
    font-weight: var(--font-weight-1);
  }
</style>
