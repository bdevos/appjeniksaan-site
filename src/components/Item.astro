---
import type { CollectionEntry } from 'astro:content'
import LinkedItem from './LinkedItem.astro'
import PostItem from './PostItem.astro'

interface Props {
  item: CollectionEntry<'linked'> | CollectionEntry<'posts'>
}

const { item } = Astro.props as Props
---

<article>
  {
    item.collection === 'linked' ? (
      <LinkedItem item={item} />
    ) : (
      <PostItem item={item} />
    )
  }
</article>
