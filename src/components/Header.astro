---
import ColorScheme from '../components/ColorScheme.astro'
import { Logo } from './Logo'
---

<header data-color-scheme="light">
  <a href="/">
    <Logo client:only="preact" title="Appjeniksaan" />
  </a>
  <ColorScheme />
</header>

<style>
  header {
    position: sticky;
    top: 0;
    padding: 10px 0;
    text-align: center;
  }

  header[data-color-scheme='light'] {
    background: linear-gradient(
      rgba(var(--cultured-rgb), 1),
      rgba(var(--cultured-rgb), 0.9) 50%,
      rgba(var(--cultured-rgb), 0)
    );
  }

  header[data-color-scheme='dark'] {
    background: linear-gradient(
      rgba(var(--yankees-blue-rgb), 1),
      rgba(var(--yankees-blue-rgb), 0.9) 50%,
      rgba(var(--yankees-blue-rgb), 0)
    );
  }

  a {
    text-underline-offset: 1px;
  }

  @media (min-width: 960px) {
    header {
      text-align: start;
    }
  }

  :global(.logo) {
    display: inline-block;
    position: relative;
    text-decoration: none;
    font-size: 1.2rem;
    line-height: 1.2rem;
    font-style: italic;
    font-weight: 400;

    --offset: 0%;
  }

  :global(.logo:hover) {
    color: var(--highlight-color);
  }

  :global(.logo .overlay) {
    position: absolute;
    left: 0;
    width: 100%;
    height: 125%;
    overflow: hidden;
    white-space: nowrap;
    z-index: 1;
    text-decoration: underline;
    text-decoration-color: var(--highlight-color);
    text-decoration-style: wavy;
    text-decoration-skip-ink: none;
    color: rgba(0, 0, 0, 0);
  }

  :global(.logo .scrollable) {
    position: relative;
    left: var(--offset);
  }
</style>
