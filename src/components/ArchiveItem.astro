---
import type { CollectionEntry } from 'astro:content'
import { dayFormatter } from '../dateFormat'

interface Props {
  item: CollectionEntry<'linked'> | CollectionEntry<'posts'>
}

const { item } = Astro.props

const day = dayFormatter.format(new Date(item.data.pubDate))
---

<li class="my-2 grid grid-cols-archive items-center gap-4">
  <span class="text-2xl font-bold justify-self-center">{day}</span>
  <h3 class="text-lg">
    <a href={`${item.collection}/${item.slug}`}>{item.data.title}</a>
  </h3>
</li>
