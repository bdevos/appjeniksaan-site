---
import type { MDItem } from '../sortAndLimit'
import { dayFormatter } from '../dateFormat'

export interface Props {
  item: MDItem
}

const { item } = Astro.props as Props

const day = dayFormatter.format(new Date(item.frontmatter.date))
---

