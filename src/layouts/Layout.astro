---
export interface Props {
  description?: string
  title?: string
  type?: 'article' | 'website'
  url?: string
}

import Dots from '@components/Dots.astro'
import Footer from '@components/Footer.astro'
import Header from '@components/Header.astro'
import { site } from '@src/constants'
import '../styles/main.css'

const { description, title, type = 'website', url = '' } = Astro.props as Props

const pageTitle = title ? `${title} - ${site.title}` : site.title
---

<!DOCTYPE html>
<html lang="en" class="bg-background text-stone-900 dark:text-white">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/icon.png" />

    <link
      rel="preload"
      href="/fonts/LondrinaShadow-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/fonts/LondrinaSolid-Light.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/fonts/Satoshi-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/fonts/Satoshi-Light.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />

    <title>{pageTitle}</title>
    <meta property="og:title" content={title ?? site.title} />

    <meta name="description" content={description ?? site.description} />
    <meta property="og:description" content={description ?? site.description} />

    <meta property="og:type" content={type} />
    <meta property="og:url" content={`${Astro.site}${url}`} />
    <link rel="canonical" href={`${Astro.site}${url}`} />

    <meta name="twitter:card" content="summary" />
    <meta name="twitter:creator" content="@appjeniksaan" />

    <link
      rel="alternate"
      type="application/rss+xml"
      title="RSS Feed for appjeniksaan.nl"
      href="/feed.xml"
    />
  </head>

  <body class="leading-7">
    <Header />

    <div class="mx-auto max-w-5xl px-4">
      <slot />

      <Dots />
      <Footer />
    </div>
  </body>
</html>

